<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ruoyang.sizebook2" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CreateRecordActivity"
            android:label="@string/title_activity_create_record" >
        </activity>
        <activity
            android:name=".ShowRecordActivity"
            android:label="@string/title_activity_show_record" >
        </activity>
        <activity
            android:name=".EditRecordActivity"
            android:label="@string/title_activity_edit_record" >
        </activity>
    </application>

</manifest>
